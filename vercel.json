{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "build/client",
        "buildCommand": "npm run build"
      }
    },
    {
      "src": "build/server/index.js",
      "use": "@vercel/node",
      "config": { "maxDuration": 30 }
    }
  ],
  "routes": [
    { "src": "/assets/(.*)", "dest": "build/client/assets/$1" },
    { "src": "/favicon.ico", "dest": "build/client/favicon.ico" },
    { "src": "/(.*)", "dest": "build/server/index.js" }
  ],
  "env": { "NODE_ENV": "production" }
}
